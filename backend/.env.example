APP_NAME=Sourdough
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
# Options: sqlite, mysql, pgsql
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

# MySQL Configuration (if DB_CONNECTION=mysql)
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=sourdough
# DB_USERNAME=root
# DB_PASSWORD=

# PostgreSQL Configuration (if DB_CONNECTION=pgsql)
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=sourdough
# DB_USERNAME=postgres
# DB_PASSWORD=

# Session & Cache
SESSION_DRIVER=file
SESSION_LIFETIME=120
CACHE_STORE=file
QUEUE_CONNECTION=database

# Mail Configuration
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Sanctum
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,localhost:8080,127.0.0.1,127.0.0.1:8000,127.0.0.1:8080,::1

# SSO Providers (all optional)
# Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=${APP_URL}/api/auth/callback/google

# GitHub
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=${APP_URL}/api/auth/callback/github

# Microsoft
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_REDIRECT_URI=${APP_URL}/api/auth/callback/microsoft

# Apple
APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=
APPLE_REDIRECT_URI=${APP_URL}/api/auth/callback/apple

# Discord
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_REDIRECT_URI=${APP_URL}/api/auth/callback/discord

# GitLab
GITLAB_CLIENT_ID=
GITLAB_CLIENT_SECRET=
GITLAB_REDIRECT_URI=${APP_URL}/api/auth/callback/gitlab

# Generic OIDC
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_REDIRECT_URI=${APP_URL}/api/auth/callback/oidc
OIDC_ISSUER_URL=

# Notification Channels (all optional)
# Telegram
TELEGRAM_BOT_TOKEN=

# Discord Webhook
DISCORD_WEBHOOK_URL=

# Slack Webhook
SLACK_WEBHOOK_URL=

# Signal (via signal-cli)
SIGNAL_CLI_PATH=
SIGNAL_PHONE_NUMBER=

# SMS - Twilio
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=

# SMS - Vonage
VONAGE_API_KEY=
VONAGE_API_SECRET=
VONAGE_FROM=

# Push Notifications
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
FCM_SERVER_KEY=

# AI/LLM Providers (all optional)
# Anthropic Claude
ANTHROPIC_API_KEY=

# OpenAI
OPENAI_API_KEY=

# Google Gemini
GEMINI_API_KEY=

# Ollama (local)
OLLAMA_BASE_URL=http://localhost:11434

# AWS Bedrock
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# Azure OpenAI
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT=

# Backup Configuration
BACKUP_DISK=local
BACKUP_RETENTION_DAYS=30

# AWS S3 (for backups)
AWS_BUCKET=
AWS_ENDPOINT=

# Version Info (auto-populated in Docker)
APP_VERSION=
APP_BUILD_SHA=
APP_BUILD_TIME=
