APP_NAME=Sourdough
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# Logging
# LOG_CHANNEL: stack (default), single, daily, json, etc.
# LOG_STACK: comma-separated channels (e.g. single, or daily,json for rotation + JSON to stderr)
# Add "json" to LOG_STACK for JSON output with correlation_id, user_id, request_uri (useful for production/containers)
# LOG_LEVEL: debug (development), info (staging), warning (production)
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug
# LOG_DAILY_DAYS: retention in days when using daily driver (default 14)
LOG_DAILY_DAYS=14
# LOG_BROADCAST_ENABLED: enable real-time log streaming to admin UI (requires Pusher, add "broadcast" to LOG_STACK)
LOG_BROADCAST_ENABLED=false
# LOG_BROADCAST_LEVEL: minimum level to broadcast (info, warning, error)
LOG_BROADCAST_LEVEL=info

# Database Configuration
# Options: sqlite, mysql, pgsql
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

# MySQL Configuration (if DB_CONNECTION=mysql)
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=sourdough
# DB_USERNAME=root
# DB_PASSWORD=

# PostgreSQL Configuration (if DB_CONNECTION=pgsql)
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=sourdough
# DB_USERNAME=postgres
# DB_PASSWORD=

# Session & Cache
SESSION_DRIVER=file
SESSION_LIFETIME=120
CACHE_STORE=file
QUEUE_CONNECTION=database

# Mail Configuration
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Sanctum
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,localhost:8080,127.0.0.1,127.0.0.1:8000,127.0.0.1:8080,::1

# SSO Providers (all optional)
# Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=${APP_URL}/api/auth/callback/google

# GitHub
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=${APP_URL}/api/auth/callback/github

# Microsoft
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_REDIRECT_URI=${APP_URL}/api/auth/callback/microsoft

# Apple
APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=
APPLE_REDIRECT_URI=${APP_URL}/api/auth/callback/apple

# Discord
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_REDIRECT_URI=${APP_URL}/api/auth/callback/discord

# GitLab
GITLAB_CLIENT_ID=
GITLAB_CLIENT_SECRET=
GITLAB_REDIRECT_URI=${APP_URL}/api/auth/callback/gitlab

# Generic OIDC
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_REDIRECT_URI=${APP_URL}/api/auth/callback/oidc
OIDC_ISSUER_URL=

# Notification Channels (all optional)
# Telegram
TELEGRAM_BOT_TOKEN=

# Discord Webhook
DISCORD_WEBHOOK_URL=

# Slack Webhook
SLACK_WEBHOOK_URL=

# Signal (via signal-cli)
SIGNAL_CLI_PATH=
SIGNAL_PHONE_NUMBER=

# SMS - Twilio
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=

# SMS - Vonage
VONAGE_API_KEY=
VONAGE_API_SECRET=
VONAGE_FROM=

# Push Notifications
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
FCM_SERVER_KEY=

# ntfy Push Notifications
NTFY_ENABLED=true
NTFY_SERVER=https://ntfy.sh

# AI/LLM Providers (all optional)
# Anthropic Claude
ANTHROPIC_API_KEY=

# OpenAI
OPENAI_API_KEY=

# Google Gemini
GEMINI_API_KEY=

# Ollama (local)
OLLAMA_BASE_URL=http://localhost:11434

# AWS Bedrock
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# Azure OpenAI
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT=

# Backup Configuration
BACKUP_DISK=local
BACKUP_RETENTION_DAYS=30

# Access Log (HIPAA) retention in days (6 years = 2190; do not reduce below for compliance)
ACCESS_LOG_RETENTION_DAYS=2190
# Enable HIPAA access logging (when false, no new logs; delete-all allowed with HIPAA warning)
HIPAA_ACCESS_LOGGING_ENABLED=true

# AWS S3 (for backups)
AWS_BUCKET=
AWS_ENDPOINT=

# Broadcasting (for real-time notifications; optional)
# Set BROADCAST_CONNECTION=pusher and configure below to enable WebSocket updates.
BROADCAST_CONNECTION=null
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https

# Version Info (auto-populated in Docker)
APP_VERSION=
APP_BUILD_SHA=
APP_BUILD_TIME=
